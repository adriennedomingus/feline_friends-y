<div class="all_cats">
  <div class="row">
      <div class="col m6">
        <div class="each_cat">
          <div class="col m6 cat_image_div">
            <%= image_tag @cat.image, class: "cat_image" %>
          </div>
          <div class="col m6 each_cat_p">
            <p>Name: <%= @cat.name %></p>
            <p>Age: <%= @cat.age %></p>
            <p>Price: <%= @cat.format_price %></p>
            <% if @cat.status == "active" %>
              <p><%= button_to "Add to Cart", carts_path(cat_id: @cat.id), class: "button btn" %></p>
            <% end %>
          </div>
          <div class="col m12">
            <p>Description: <%= @cat.description %></p>
          </div>
        </div>
      </div>
  </div>
</div>

<% if current_admin?  %>
  <div>
    <p><%= link_to "Edit #{@cat.name}", edit_admin_cat_path(@cat), class: "button btn" %></p>
  </div>
  <div>
    <p><%= button_to "Change Status to Inactive", admin_path(@cat), method: "patch", class: "button btn" %></p>
  </div>
<% end %>
