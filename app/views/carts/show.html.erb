<div class="row">
    <div class="col m8">
      <h1>Your Cart</h1>
    </div>
    <div class="col m4 cart_total">
      Total Price: <%= @cart.total_price %> / day
    </div>

    <div class="spacer">
    </div>
    <div class="spacer">

    </div>

    <%= form_for @order do |f| %>
    <div class="row">
      <div class="col m6 start_date">
        <h5>Reservation Start Date</h5>
        <%= f.date_select :start_date, start_year: Date.today.year, id: "start"%>
      </div>
      <div class="col m6">
        <h5>Reservation End Date</h5>
        <%= f.date_select :end_date, start_year: Date.today.year, id: "end" %>
      </div>
    </div>
    <%= f.submit "Checkout", class: "button btn" %>
    <% end %>

</div>
<%= render partial: "partials/each_cat", locals: {cats: @cats} %>
